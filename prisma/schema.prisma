generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  user_id  Int @id @default(autoincrement())
  user_type String
  username  String? @unique
  commerce_name String? @unique
  adresse_commerce String? @unique
  email String @unique
  password String
  createdAt DateTime @default(now())
  sentMessages  Messages[] @relation("SentMessages")
  receivedMessages  Messages[] @relation("ReceivedMessages")
  dons Dons[]
}

model Dons {
  don_id Int @id @default(autoincrement())
  title String
  description String
  category String
  quantity Int
  limit_date DateTime
  rdv_pts Json
  img_url String
  publishedAt DateTime @default(now())
  status Boolean @default(false)
  lieu String?
  Heure DateTime?
  donneur_id Int
  donneur Users @relation(fields: [donneur_id], references: [user_id], onDelete: Cascade)
}

model Messages {
  message_id  Int @id @default(autoincrement())
  content String
  sentAt  DateTime @default(now())
  author_id Int
  author  Users @relation("SentMessages", fields: [author_id], references: [user_id])
  receiver_id Int
  receiver  Users @relation("ReceivedMessages", fields: [receiver_id], references: [user_id])
}